
<% if flash[:notice] %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
<% end %>
<fieldset>
  <legend>Вход</legend>

  <%= form_for @user, :url => '/admin/sessions', :method => :post do |f| %>

      <label for="session_name">Пользователь: </label>
      <%= f.text_field :name %><br />

      <label for="session_password">Пароль: </label>
      <%= f.password_field :password %><br />

      <%= submit_tag "Войти" %>

  <% end %>

</fieldset>